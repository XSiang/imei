<table class="table table-hover">
	<thead>
		<tr>
			<th>員工</th>
			<th>部門</th>
			<th></th>
		</tr>
	</thead>
	<tbody>

		<% @employees.each do |employee| %>
		<tr>
			<td>
				<%= employee.name %>
			</td>
			<td>
				<%= employee.department.try(:name) %>
			</td>
			<td>
				<%= link_to '編輯', edit_employee_path(employee), class: 'btn btn-default' %>
				<%= button_to '刪除', employee_path(employee), method: :delete, data: {confirm: '您確定要刪除 ' + employee.name + ' ?' }, class: 'btn btn-default' %>
			</td>
		</tr>
		<% end %>

	</tbody>
</table>

<%= link_to '新增', new_employee_path, class: 'btn btn-default' %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>動作</th>
			<th>部門</th>
			<th>產品</th>
			<th></th>
		</tr>
	</thead>
	<tbody>

		<% @motions.each do |motion| %>
		<tr>
			<td>
				<%= motion.name %>
			</td>
			<td>
				<%= motion.department.try(:name) %>
			</td>
			<td>
			</td>
			<td>
				<%= link_to '編輯', edit_motion_path(motion), class: 'btn btn-default' %>
				<%= button_to '刪除', motion_path(motion), method: :delete, data: {confirm: '您確定要刪除 ' + motion.name + ' ?'}, class: 'btn btn-default' %>
			</td>
		</tr>
		<% end %>

	</tbody>
</table>

<%= link_to '新增', new_motion_path, class: 'btn btn-default' %>